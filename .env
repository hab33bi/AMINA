# AMINA - Environment Variables Configuration
# Copy this file to .env.local for local development
# For production, set these in your Vercel dashboard

# LM Studio API Configuration via ngrok tunnel
# Using actual ngrok URL for LM Studio streaming
REACT_APP_LM_STUDIO_URL=https://sure-allowed-impala.ngrok-free.app/v1

# Alternative configurations (comment out the line above and uncomment one below):
# For local development only:
# REACT_APP_LM_STUDIO_URL=http://192.168.1.174:1234/v1

# For port forwarding (advanced):
# REACT_APP_LM_STUDIO_URL=http://your-public-ip:1234/v1

# Model Configuration
REACT_APP_MODEL_NAME=gemma-3-12b

# Optional: API Configuration
REACT_APP_TEMPERATURE=0.7
REACT_APP_MAX_TOKENS=2000

# App Configuration
REACT_APP_APP_NAME=AMINA
REACT_APP_VERSION=1.0.0

# Development vs Production
# NODE_ENV is automatically set by React
# NODE_ENV=development (for local)
# NODE_ENV=production (for Vercel)

